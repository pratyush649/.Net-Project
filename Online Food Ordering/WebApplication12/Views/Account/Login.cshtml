@model WebApplication12.Models.ViewModel.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/datepicker3.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

      
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">Log in</div>
                <div class="panel-body">
                    <form role="form">
                        <fieldset>
                            <div class="form-group">
                                @Html.TextBoxFor(Model => Model.username, new { @class = "form-control", @placeholder = "Enter Username", @autofocus = "", @autocomplete = "false" })

                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(Model => Model.password, new { @class = "form-control", @placeholder = "Enter Password", @autocomplete = "false" })
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                </label>
                            </div>
                            <input type="submit" value="Login" class="btn btn-primary" />
                            <a href="@Url.Action("Signup", "Account")">Sign Up</a> |
                            <a href="@Url.Action("ForgetPassword","Account")">Forgot Password</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div><!-- /.col-->
    </div>
    }

    <script src="js/jquery-1.11.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>
</html>
